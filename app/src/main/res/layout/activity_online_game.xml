<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@drawable/game_background"
    tools:context=".online_gameActivity">

    <TextView
        android:id="@+id/participants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user1 vs user2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/zero_zero"
        android:background="@drawable/button_selector"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845"
        app:layout_constraintBottom_toTopOf="@+id/one_zero"
        />
    <Button
        android:id="@+id/zero_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_selector"
        app:layout_constraintVertical_bias="0.845"
        app:layout_constraintBottom_toTopOf="@+id/one_zero"
        />
    <Button
        android:id="@+id/zero_two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845"
        android:background="@drawable/button_selector"
        app:layout_constraintBottom_toTopOf="@+id/one_zero"
        />

    <Button
        android:id="@+id/one_zero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <Button
        android:id="@+id/one_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/one_two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/two_zero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_selector"
        app:layout_constraintVertical_bias="0.69"
        />

    <Button
        android:id="@+id/two_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.69"
        />

    <Button
        android:id="@+id/two_two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.69"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_result"
        android:textStyle="bold"
        android:textColor="@color/grey_font"
        android:shadowColor="@color/text_shadow_white"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/two_one"
        android:text="winner is ayush"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/restart"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_result"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:alpha="0.8"
        android:text="RESTART"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>