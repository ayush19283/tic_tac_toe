<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A4958"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

  <Button
    android:id="@+id/options"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/three_dots"
      app:layout_constraintLeft_toRightOf="@+id/title"
      app:layout_constraintRight_toRightOf="parent"/>

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Tic Tac Toe"
      android:textSize="50dp"
      android:paddingTop="30dp"
      android:textAlignment="center"
      android:textStyle="bold"
      android:textColor="@color/grey_font"
      android:shadowColor="@color/text_shadow_white"
      android:shadowDx="-2"
      android:shadowDy="-2"
      android:shadowRadius="1"

      />

    <TextView
            android:id="@+id/offline"
            android:layout_width="150dp"
            android:background="@drawable/round_rectangle"
            android:layout_height="120dp"
            android:text="Play offline"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textAlignment="center"
            android:gravity="bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:background="@drawable/ic_robot_svgrepo_com" />

    <TextView
        android:id="@+id/online"
        android:layout_width="150dp"
        android:background="@drawable/round_rectangle"
        android:layout_height="120dp"
        android:text="Play online"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:background="@drawable/ic_internet_svgrepo_com" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="160dp"
        android:background="@drawable/round_rectangle"
        android:layout_height="120dp"
        android:text="Play with friends"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        />
    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.74"
        android:background="@drawable/ic_boy_svgrepo_com" />



</androidx.constraintlayout.widget.ConstraintLayout>